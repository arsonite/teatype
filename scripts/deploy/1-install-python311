grandparent_directory=$(dirname "$(readlink -f "$0")")
parent_directory=$(dirname "$grandparent_directory")
grandparent_directory=$(dirname "$parent_directory")
. "$grandparent_directory/util/bash-helper.sh"

prepare_sudo_env

sudo add-apt-repository -y ppa:deadsnakes/ppa
sudo apt-get update -y
sudo apt install -y python3.11 python3.11-dev python3.11-venv python3-pip