workspace_directory=$(dirname "$(readlink -f "$0")") # teatype/scripts/deploy
parent_directory=$(dirname "$workspace_directory") # teatype/scripts
grandparent_directory=$(dirname "$parent_directory") # teatype
. "$grandparent_directory/util/bash-helper.sh"

prepare_sudo_env

$workspace_directory/1-install-python311
$workspace_directory/2-create-env
$workspace_directory/3-install-dev-environment
$workspace_directory/5-install-system-dependencies

env_path="$grandparent_directory/.env"
. "$env_path"

if [[ ":$PATH:" != *":/usr/local/bin:"* ]]; then
    echo 'export PATH="/usr/local/bin:$PATH"' >> ~/.bashrc
    echo "Added /usr/local/bin to PATH in ~/.bashrc"
fi

cli_path="$grandparent_directory/cli"
input_file="$cli_path/proxy.template"
output_file="/usr/local/bin/tt"

sudo rm -f "$output_file"

sed -e "s|{{WORKSPACE_PATH}}|$grandparent_directory|g" "$input_file" | sudo tee "$output_file" >/dev/null

sudo chmod a+x "$cli_path/tt"
sudo chmod a+x "$input_file"
sudo chmod a+x "$output_file"
echo "Processed script saved to $output_file"

exec bash