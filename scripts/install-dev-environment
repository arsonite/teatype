set -e # Exit immediately if a command exits with a non-zero status
parent_directory=$(dirname "$(dirname "$(readlink -f "$0")")")
cd "$parent_directory"

python3.11 -m pip install --upgrade pip
python3.11 -m venv teatype-venv
. teatype-venv/bin/activate
python3.11 -m pip install -r $parent_directory/python/requirements/package.txt
python3.11 -m pip install -r $parent_directory/python/requirements/test.txt