# From local imports
from teatype.cli import BaseTUI

class Test(BaseTUI):
    def meta(self):
        return {
            'name': 'test',
            'shorthand': 'tt',
            'help': 'A test TUI for testing purposes',
            'actions': [
                {
                    'name': 'edit',
                    'help': 'Edit an entry',
                    'option_name': 'index',
                    'option': int
                },
                {
                    'name': 'delete',
                    'help': 'Delete an entry',
                    'option_name': 'index',
                    'option': int
                },
                {
                    'name': 'view',
                    'help': 'View an entry',
                    'option_name': 'index',
                    'option': int
                }
            ]
        }
    
    def on_display(self):
        pass
    
    def on_prompt(self):
        pass
        
if __name__ == '__main__':
    Test()